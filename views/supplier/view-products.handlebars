<body class="">
     <div class="content-wrapper">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Products Information</h4>
              <div class="row">
                <div class="col-12">
                  <div class="table-responsive">
                    <table id="order-listing" class="table">
                      <thead>
                        <tr>
                            <th>Product Info.</th>
                            <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                          <% for(product of products) { %>
                        <tr data-id="<%= product._id %>" data-type="product">
                            <td>
                                <div class="col-md-10 grid-margin stretch-card">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-sm-flex flex-row flex-wrap text-center text-sm-left align-items-center">
                                               
                                                <img src="/Dashboard/images/faces/face11.jpg" style="width:120px;height:120px; !important" class="img-lg rounded" alt="profile image"/>
                                                
                                                <div class="ml-sm-3 ml-md-0 ml-xl-3 mt-2 mt-sm-0 mt-md-2 mt-xl-0">
                                                    <span class="text-success alert alert-danger outline-primary font-weight-bold" style="float:right; top:8px; right:16px; position:absolute;">$ <%= product.product_price %></span>
                                                    <h4 class="mb-0"><%= product.product_name %></h4>
                                                    <p class="text-muted mb-1">Description: <%= product.product_description %></p>
                                                    <p class="mb-0 text-danger font-weight-bold">Category: <%= product.product_category %> </p>
                                                    <p class="mb-0 text-success font-weight-bold">Tag: <%= product.product_tage %></p>
                                                    <p class="mb-0 text-warning font-weight-bold">Quantity: <%= product.product_quantity %> </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <button class="btn btn-outline-warning">View</button>
                                <button class="btn btn-outline-info">Update</button>
                                <button class="btn btn-outline-danger">Delete</button>
                            </td>
                        </tr>
                         <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

</body>