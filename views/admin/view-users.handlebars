                        <tr>
                            <th>User Information</th>
                            <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                         <% if(user.role=="Admin"){%>
                          <tr data-id="" data-type="user">
                            <td>
                                  <div class="col-md-10 grid-margin stretch-card">
