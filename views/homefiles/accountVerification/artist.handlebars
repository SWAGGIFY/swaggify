
<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="{{#each this}}{{avatar}}{{/each}}" alt="" style="border-radius: 25px;">
            <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
            <h3>Welcome {{#each this}}{{firstname}}{{/each}}</h3>
            <p>You are 30 seconds away from earning your own money!</p>
            <input href="/auth/sign-in" type="submit" name="" value="Login"/><br/>
        </div>
        <div class="col-md-9 register-right" style="height: 478px;">
            <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Personal</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Contact</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <form action="/auth/verify-account" method="post">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Personal Details</h3>
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" name="firstname" class="form-control" placeholder="First Name *" value="{{#each this}}{{firstname}}{{/each}}" />
                                </div>
                                <div class="form-group">
                                    <input type="text" name="lastname" class="form-control" placeholder="Last Name *" value="{{#each this}}{{lastname}}{{/each}}" />
                                </div> 
                                <div class="form-group">
                                    <input type="text" name="username" class="form-control" placeholder="Enter username *" value="{{#each this}}{{username}}{{/each}}" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                
                                <div class="form-group">
                                    <input type="password" name="pwd" class="form-control" placeholder="Password *" value="" />
                                </div>
                                <div class="form-group">
                                    <input type="password" name="pwd1" class="form-control"  placeholder="Confirm Password *" value="" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <h3  class="register-heading">Contact Details</h3>
                        <div class="row register-form">
                            
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="email" name="email" class="form-control" placeholder="Your Email *" value="{{#each this}}{{#socialNetwork}}{{#each this}}{{email}}{{/each}}{{/socialNetwork}}{{/each}}" />
                                </div>
                                <div class="form-group">
                                    <input type="text" name="address" minlength="10" maxlength="10" name="txtEmpPhone" class="form-control" placeholder="Your address *" value="{{#each this}}{{#address}}{{#each this}}{{address}}{{/each}}{{/address}}{{/each}}" />
                                </div>
                                <div class="form-group">
                                    <input type="text" name="city" class="form-control" placeholder="Enter city *" value="" required/>
                                </div>
                            </div>
                            <div class="col-md-6">
                                
                                <div class="form-group">
                                    <input type="text" name="contact" class="form-control" placeholder="Enter contact *" value="" required/>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="country" class="form-control" placeholder="Enter Country *" value="" required/>
                                </div>
                                <input type="submit" class="btnRegister"  value="Verify"/>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>