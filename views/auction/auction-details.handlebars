  <!-- ##### About Us Area Start ##### -->
  <section class="about-us-area">
    <div class="container">
      <div class="row align-items-center">

        <!-- About Us Thumbnail -->
        <div class="col-12 col-lg-4">
          <div class="about-us-thumbnail mb-50">
            <img src="/home/img/bg-img/p1.jpg" alt="">
          </div>
        </div>
        <!-- About Us Content -->
        <div  class="col-12 col-lg-4 products">
          <div class="about-us-content mb-100">
            <!-- Section Heading -->
            <div class="section-heading">
              <p> <%= auctionDetail.name %></p>
              <img src="/home/img/core-img/decor.png" alt="">
            </div>
            <h4><span class="product-price">Start Amount:$ <%= auctionDetail.startAmount %></span></h4>
            <h4><span class="product-price">Current Bid:$ <%= auctionDetail.currentBid.value %></span></h4>

            <h6> <span>Description:</span></h6>
            <p><%= auctionDetail.description %></p>
             <% if(user){ %>
              <% if (user.package =="BRONZE"){ %>
              <div class="product-meta-data">
                <a href="#" data-toggle="tooltip" data-placement="top" class="btn famie-btn mt-30">Upgrade Package</a>
              </div>
              
              <% } else{ %>
              <div class="product-meta-data">
                <a href="#" data-toggle="modal" onclick="bid('<%= auctionDetail._id %>')" data-target="#auctionValue" data-placement="top" class="btn famie-btn mt-30">Bid</a>
              </div>
              <% } %>
              <% } else { %>
              <div class="product-meta-data">
                <a href="#" data-toggle="modal"  data-target="#SingIn" data-placement="top" class="btn famie-btn mt-30">Bid</a>
              </div>
              <% } %>
            
          </div>
        </div>
      </div>
    </div>
  </section>

